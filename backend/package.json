{
  "name": "attendance-system-backend",
  "version": "1.0.0",
  "description": "Backend API for Employee Attendance System - Phase 1",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "chmod +x scripts/start.sh && ./scripts/start.sh",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "ts-node prisma/seed.ts",
    "db:setup": "prisma db push && npm run db:seed",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "@types/node": "^24.9.1",
    "express": "^5.1.0",
    "cors": "^2.8.5",
    "helmet": "^8.1.0",
    "bcryptjs": "^3.0.2",
    "jsonwebtoken": "^9.0.2",
    "joi": "^18.0.1",
    "express-rate-limit": "^8.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "typescript": "^5.8.2",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "prisma": "^6.17.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}